<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with corner radius and green border -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/lgblackmain"/>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Search drawable -->
    <item
        android:drawable="@drawable/arrow_drop_down"
        android:gravity="end|center_vertical"
        android:left="10dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"/>
</layer-list>