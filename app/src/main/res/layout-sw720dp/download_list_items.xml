<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lgblackcircle_bg"
    android:id="@+id/itemll"
    android:layout_margin="10dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="280dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@android:color/transparent">



        <ImageView
            android:id="@+id/downloadIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/avatarthewayofwatervertical"
            android:scaleType="fitXY"
            />


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="top|center"
        android:gravity="top|start"
        android:padding="8dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/downloadTitle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="start|center"
        android:padding="4dp"
        android:text="Avatar: The Way of Water |Official Teaser Trailer"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"/>

        <TextView
            android:id="@+id/downloadEpTitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:padding="4dp"
            android:text="2 min 14 sec"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/iconColor"/>

    <TextView
        android:id="@+id/downloadDuration_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:padding="4dp"
        android:text="2 min 14 sec"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/iconColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        <ImageView
            android:id="@+id/playIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="start|center"
            android:elevation="8dp"
            android:src="@drawable/play128px"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="8dp"
            android:layout_gravity="start|center"
            android:background="@drawable/lgblackroundcircle_bg">

            <ImageView
                android:id="@+id/cancelIv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:elevation="8dp"
                android:src="@drawable/closeblack64px"
                android:tint="@color/white"
                android:background="@android:color/transparent"
                tools:ignore="UseAppTint" />

        </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>