<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/itemll"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="4dp"
            android:padding="4dp"
            android:text="Live"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/blackcircle_bg"
            android:drawableStart="@drawable/redcircle16px"
            android:drawablePadding="10dp"
            />

        <ImageView
            android:id="@+id/nowontv_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:src="@drawable/strangerthings1"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/channelNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="ESPN"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/blackcircle_bg"
            />



    </androidx.cardview.widget.CardView>




    <TextView
        android:id="@+id/nowontvTitle_tv"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="start|center"
        android:padding="4dp"
        android:text="Venom 3"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/nowontvTiming_tv"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="6dp"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:padding="4dp"
        android:text="Venom 3"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/iconColor"/>

</LinearLayout>