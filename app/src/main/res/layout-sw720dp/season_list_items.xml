<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/itemll"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/itemCv"
        android:layout_width="360dp"
        android:layout_height="200dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/playRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="8dp"
            android:background="@drawable/dimcircle_720bg"
            >

            <ImageView
                android:id="@+id/playIv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:elevation="10dp"
                android:src="@android:drawable/ic_media_play"
                tools:ignore="UseAppTint" />

        </RelativeLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/playIv"-->
        <!--            android:layout_width="24dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:elevation="8dp"-->
        <!--            android:src="@drawable/play128px"/>-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/seasonImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/gots01e01"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/titleDescLl"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_margin="10dp"
        android:layout_gravity="start|center"
        android:gravity="top|start"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seasonTitle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="start|center"
            android:padding="4dp"
            android:text="1. Valar Doheris"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/seasonTiming_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:padding="4dp"
            android:text="55 min"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/iconColor"/>

    </LinearLayout>

</LinearLayout>