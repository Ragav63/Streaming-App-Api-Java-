<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/itemll"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">





        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/black">

            <TextView
                android:id="@+id/tvLogoNameTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="ESPN"
                android:textAllCaps="true"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="35dp"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="top|center"
            android:gravity="top|start"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="start|center"
                android:padding="4dp"
                android:maxLines="1"
                android:textAllCaps="true"
                android:text="ESPN"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/currentProgramName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:padding="8dp"
                android:maxLines="1"
                android:text="NBA Playoff: Lakers vs Denvers, Game 2"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/iconColor"/>


        </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/lgblackroundcircle_bg"
            >

            <ImageView
                android:id="@+id/favIv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:elevation="8dp"
                android:src="@drawable/favourite64px"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/iconColor"/>

</LinearLayout>