<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/itemll"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/itemCv"
        android:layout_width="180dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/playRl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="8dp"
            android:background="@drawable/dimcircle_bg"
            >

            <ImageView
                android:id="@+id/playIv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:elevation="10dp"
                android:src="@android:drawable/ic_media_play"
                tools:ignore="UseAppTint" />

        </RelativeLayout>

<!--        <ImageView-->
<!--            android:id="@+id/playIv"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:elevation="8dp"-->
<!--            android:src="@drawable/play128px"/>-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/seasonImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/gots01e01"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/titleDescLl"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_gravity="start|center"
        android:gravity="top|start"
        android:padding="4dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/seasonTitle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="start|center"
        android:padding="2dp"
        android:text="1. Valar Doheris"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/seasonTiming_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:padding="2dp"
        android:text="55 min"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/iconColor"/>

    </LinearLayout>

</LinearLayout>