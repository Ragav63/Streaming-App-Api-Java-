<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/itemll"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="110dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:id="@+id/playIv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:src="@drawable/play128px"/>

<!--        <ImageView-->
<!--            android:id="@+id/trailerImg"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_gravity="center"-->
<!--            android:src="@drawable/avatarthewayofwater"-->
<!--            android:scaleType="fitXY"-->
<!--            />-->
        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="false"
            app:enableAutomaticInitialization="false"
            android:id="@+id/youtubeplayer"
            tools:ignore="MissingClass" />


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:layout_gravity="start|center"
        android:gravity="top|start"
        android:padding="4dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/trailerTitle_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="start|center"
        android:padding="2dp"
        android:text="Avatar: The Way of Water |Official Teaser Trailer"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/trailerTiming_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        android:gravity="start|center"
        android:padding="2dp"
        android:text="2 min 14 sec"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/iconColor"/>

    </LinearLayout>

</LinearLayout>