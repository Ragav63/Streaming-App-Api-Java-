<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialogTopcurve" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize background color -->
        <item name="android:background">@drawable/topcurve_blackappbg</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize button text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Customize button background color -->
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_botttom</item>
    </style>

    <!-- Dialog Animation for Landscape TV Fragment (from right) -->
    <style name="DialogAnimationRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- In res/values/styles.xml -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:dropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="TextAppearance.AppCompat.Widget.DropDownItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:progressDrawable">@drawable/playersbar_progress_drawable</item>
        <item name="android:thumb">@drawable/thumb_sbar</item>
    </style>

</resources>